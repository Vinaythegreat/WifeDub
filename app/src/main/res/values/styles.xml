<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="QuestionHeader" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/question_header_bottom_padding</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="question" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:layout_marginTop">@dimen/question_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_bottom_margin</item>
    </style>

</resources>
